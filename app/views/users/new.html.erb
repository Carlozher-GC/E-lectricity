<div class="main-div">
    <%= form_for @user, url: '/register', method: :post do |form| %>
        <h1 class="h3 mb-3 fw-normal" style="color: purple">E-lectricity</h1>
        <%= render 'shared/error_messages', object: form.object %>

        <div class="row">
            <div class="column">
                <p>First name:</p>
                <%= form.text_field :first_name, class: 'rounded-input', placeholder: 'First name' %>
            </div>
            <div class="column">
                <p>Last name:</p>
                <%= form.text_field :last_name, class: 'rounded-input', placeholder: 'Last name' %>
            </div>
        </div>

        <div class="row">
            <div class="column">
                <p>Email:</p>
                <%= form.text_field :email, class: 'rounded-input', placeholder: 'Email' %>
            </div>
            <div class="column">
                <p>Username:</p>
                <%= form.text_field :username, class: 'rounded-input', placeholder: 'Username' %>
            </div>
        </div>

        <div class="row">
            <div class="column">
                <p>Contraseña:</p>
                <%= form.password_field :encrypted_password, class: 'rounded-input', placeholder: 'Contraseña' %>
            </div>
            <div class="column">
                <p>Teléfono:</p>
                <%= form.text_field :phone, class: 'rounded-input', placeholder: 'Teléfono' %>
            </div>
        </div>

        <div class="row">
            <div class="column">
                <p>Calle:</p>
                <%= form.text_field :street, class: 'rounded-input', placeholder: 'Calle' %>
            </div>
            <div class="column">
                <p>Código postal:</p>
                <%= form.text_field :zip_code, class: 'rounded-input', placeholder: 'Código postal' %>
            </div>
        </div>

        <div class="register-input-div" style="height: 30%; padding-top: 30px">
            <button class="rounded-button" type="submit">Registrarse</button>
        </div>
    <% end %>
    <%= form_with url: "/login", method: :get do |form| %>
        <div class="register-input-div" style="height: 30%; padding-top: 30px">
            <b>¿Ya tienes una cuenta?</b>
            <button class="rounded-button" type="submit">Iniciar sesión</button>
        </div>
    <% end %>
</div>

<style>
    .main-div {
        width: 100%;
        height: 100%;
        padding-top: 5%;
        padding-right: 20%;
        padding-left: 20%;
        vertical-align: middle;
        text-align: center;
    }

    .row {
        text-align: left;
        padding-top: 15px;
        padding-right: 5%;
        padding-left: 5%;
    }

    .column {
        width: 50%;
        padding-left: 5%;
        padding-right: 5%
    }

    .register-input-div {
        height: 30px;
        padding-left: 20%;
        padding-right: 20%;
    }

    p {
        margin: 0px;
    }
</style>